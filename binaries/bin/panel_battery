source ~/bin/panel_colors

BAT=`echo $(acpi -b | awk '{gsub(/%,/,""); print $4}' | sed 's/%//g')`
STATUS=`acpi -b | awk '{gsub(/,/,""); print $3}'`

# Set msg
msg=""
st=""
if [[ $STATUS != "Discharging" ]]; then
        st="+"
else
        st="-"
fi
if [[ $BAT -lt 10 ]]; then
	msg="%{F$COLOR_URGENT_FG}$BAT%%{F-}"
elif [[ $BAT -lt 40 ]]; then
	msg="%{F$COLOR_OCCUPIED_FG}$BAT%%{F-}"
else
	msg="%{F$COLOR_STATUS_FG}$BAT%%{F-}"
fi



echo "$st$msg - "

conky.config = {
    background = true, -- in daemon mode

    own_window = true,
    -- semi transparent background 
    own_window_argb_visual = true,
    own_window_argb_value = 221,
    own_window_colour = '#282828', --backgound color

    update_interval = 1,
    total_run_times = 0,
    cpu_avg_samples = 2,
    net_avg_samples = 2,
    double_buffer = true,
    own_window_class = 'conky',
    own_window_type = 'override',
    border_inner_margin = 8,
    border_outer_margin = 0,
    draw_shades = false,
    draw_graph_borders = true,
    show_graph_scale = false,
    show_graph_range = false,
    default_graph_width = 26,
    default_graph_height = 80,
    minimum_width = 250,
    minimum_height = 310,
    maximum_width = 250,
    alignment = 'top_right',
    gap_x = 15,
    gap_y = 40,
    use_xft = true,
    override_utf8_locale = true,
    font = 'Droid Sans:size=8',
    --xftalpha = 0.5,
    default_outline_color = '#AAAAAA',
    default_shade_color = '#AAAAAA',
    default_color =  '#ebdbb2',
    color1 = '#83a598',
    color2 = '#fb4934',
    color3 = '#928374',
    color4 = '#458588',
    short_units = true,
    pad_percents = 2
}
conky.text = [[
${font Droid Sans:size=11}${alignc 10}${color}${exec cat /etc/hostname} ${machine}${font}${color}
${voffset 6}${font Droid Sans:size=10}${alignc}Kernel: ${kernel}${font}${color}
${voffset 3}${alignc}${font Decker:size=38}${color1}${time %H:%M}${font}
${voffset 1}${alignc}${font Decker:size=14}${time %A %d %b}${font}${color}
${voffset 14}\
CPU:\
${goto 50}${cpubar 7,170}\
${alignr}${cpu cpu0}%
\
${voffset 4}\
Mem:\
${goto 50}${membar 7,170}\
${alignr}${memperc}%
\
${voffset 4}\
Uptime:\
${alignr}${uptime_short}
\
${alignr 30}${loadgraph 26,190 -l}${color}
${font Droid Sans:size=11}${color3}Top mem ${hr 2}${color}${font}
$color4${font Droid Sans:size=9}Process name${alignc -15}Mem %${alignr}Mem${color}${font}
${top_mem name 1}${alignc -15}${top_mem mem 1}%${alignr}${top_mem mem_res 1}
${top_mem name 2}${alignc -15}${top_mem mem 2}%${alignr}${top_mem mem_res 2}
${top_mem name 3}${alignc -15}${top_mem mem 3}%${alignr}${top_mem mem_res 3}
${top_mem name 4}${alignc -15}${top_mem mem 4}%${alignr}${top_mem mem_res 4}

${font Droid Sans:size=11}${color3}Top CPU ${hr 2}${color}${font}
$color4${font Droid Sans:size=9}Process name${alignc -17}CPU %${alignr}Mem${color}${font}
${voffset 5}${top name 1}${alignc -15}${top cpu 1}%${alignr}${top mem_res 1}
${voffset 4}${top name 2}${alignc -15}${top cpu 2}%${alignr}${top mem_res 2}
${voffset 4}${top name 3}${alignc -15}${top cpu 3}%${alignr}${top mem_res 3}
${voffset 4}${top name 4}${alignc -15}${top cpu 4}%${alignr}${top mem_res 4}

${font Droid Sans:size=11}${color3}Hard drive ${hr 2}${color}${font}
$color4${font Droid Sans:size=9}Device${alignc -15}Write${alignr}Read${color}${font}
sda${alignc -15}${diskio_write sda}${alignr}${diskio_read sda}
${diskiograph sda 36,230}
${if_existing /proc/net/route wlp2s0}\
${font Droid Sans:size=11}${color3}Network - wlp2s0 ${hr 2}${color}${font}
Up: ${upspeed wlp2s0} ${goto 145}Down: ${downspeed wlp2s0}
${upspeedgraph wlp2s0 26,115} ${alignr}${downspeedgraph wlp2s0 26,115}
SSID: ${wireless_essid wlp2s0}${goto 145}Speed: ${wireless_bitrate wlp2s0}
Signal: ${wireless_link_qual_perc wlp2s0}%${goto 145}IP: ${addr wlp2s0}\
${endif}\
${if_existing /proc/net/route enp3s0}
${font Droid Sans:size=11}${color3}Network - enp3s0 ${hr 2}${color}${font}
Up: ${upspeed enp3s0} ${goto 145}Down: ${downspeed enp3s0}
${upspeedgraph enp3s0 26,115} ${alignr}${downspeedgraph enp3s0 26,115}
${goto 145}IP: ${addr enp3s0}\
${endif}\
]]
-- vim:set et sw=4 ts=8 syntax=lua:

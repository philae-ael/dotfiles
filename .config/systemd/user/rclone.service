[Unit]
Description=Google Drive (rclone)
AssertPathIsDirectory=%h/drive
# Make sure we have network enabled
After=network.target

[Service]
Type=simple

ExecStart=/usr/bin/rclone mount --vfs-cache-mode full Drive: %h/drive

# Perform lazy unmount
ExecStop=/usr/bin/fusermount -zu %h/drive

# Restart the service whenever rclone exists with non-zero exit code
Restart=on-failure
RestartSec=15

[Install]
# Autostart after reboot
WantedBy=default.target

#
# bspwm hotkeys
#

super + q
	bspc node -c

super + shift + q
	bspc node -k

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f,d,g}
	bspc node -t '~{floating,fullscreen,pseudo_tiled,tiled}'

super + Tab
	bspc desktop -f last

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + {Left,Right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l,c}
	bspc node -p {west,south,north,east,cancel}

super + {_, shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}


super + {shift,_} + equal
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# Sticky windows
super + e
    bspc node -g sticky

# Preventing closing
super + r
    bspc node -g locked

# Private window -> using with sticky give you the possibility to have a window on all desktops, mantaining the tiling and the position
super + z
    bspc node -g private

#
# wm independent hotkeys
#

super + n
        google-chrome-stable

super + Return
	kitty

super + space
        j4-dmenu-desktop --dmenu="rofi -dmenu -i"

super + shift + space
        rofi -show window

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


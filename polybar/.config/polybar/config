color20 = #bdae93
color21 = #ebdbb2


[bar/bar]
enable-ipc = true
width = 100%
height = 26
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

border-bottom-size = 3
border-bottom-color = ${colors.background-alt}


padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = Noto Sans:pixelsize=11;2
font-1 = Symbola:size=12;1

modules-left = workspaces pad spotify-note pad-inv spotify-previous pad-inv spotify-play-pause pad-inv spotify-next pad-inv spotify
modules-center = xwindow
modules-right = wlan pad pulseaudio pad battery pad date pad powermenu pad

; wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/pad-inv]
type               = custom/text
content            = "   "
content-foreground = ${colors.background-alt}
content-background = ${colors.background}


[module/pad]
type               = custom/text
content            = " | "
content-foreground = ${colors.background-alt}
content-background = ${colors.background}


[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%

[module/workspaces]
type = internal/i3

width=50

pin-workspaces = true
strip-wsnumbers = true
index-sort = true

label-focused = %name%
label-focused-foreground = ${colors.foreground-alt}
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-background = ${colors.background}
label-unfocused-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.color1}
label-urgent-padding = 1

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <label-connected>

format-connected-prefix = "üì∂ "
format-connected-foreground = ${colors.color20}

label-connected = %essid% 

label-disconnected = Wifi off
label-disconnected-foreground = ${colors.foreground-alt}


[module/date]
type = internal/date
interval = 5

date =
date-alt = "%d/%m/%Y"

time = %H:%M
time-alt = %H:%M:%S
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = üîä
label-volume-foreground = ${colors.foreground-alt}

format-muted = <label-muted> <bar-volume>
label-muted = üîá
format-muted-foreground = ${colors.foreground-alt}

bar-volume-width = 6
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #f5a70a
bar-volume-foreground-3 = #f5a70a
bar-volume-foreground-4 = #ff5555
bar-volume-gradient = true
bar-volume-indicator = ‚îÇ
bar-volume-indicator-foreground = ${colors.foreground-alt}
bar-volume-fill = ‚îÄ
bar-volume-empty = ‚îÄ
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 98

format-charging = <label-charging>
format-charging-prefix = "+ "

format-discharging = <label-discharging>
format-discharging-prefix = "- "

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = power
label-open-foreground = ${colors.color2}
label-close = cancel
label-close-foreground = ${colors.color2}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}


menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = logout
menu-0-2-exec = menu-open-3

menu-1-0 = reboot
menu-1-0-exec = reboot
menu-1-1 = reboot to windows
menu-1-1-exec = systemctl start restart_to_windows.service
menu-1-2 = cancel
menu-1-2-exec = menu-open-0

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

menu-3-0 = logout
menu-3-0-exec = i3-msg exit
menu-3-1 = cancel
menu-3-1-exec = menu-open-0

[module/spotify-note]
type=custom/text
content = "‚ô´ :"

[module/spotify-previous]
type=custom/text
content = "‚èÆ"
click-left=playerctl previous
format-foreground = ${colors.foreground-alt}

[module/spotify-play-pause]
type=custom/script
click-left=playerctl play-pause
exec = python ~/scripts/spotify_status.py -f "{play_pause}" -p "‚èµ,‚è∏" -d "‚èØ"
format-foreground = ${colors.foreground-alt}

[module/spotify-next]
type=custom/text
content = "‚è≠"
click-left=playerctl next
format-foreground = ${colors.foreground-alt}


[module/spotify]
type = custom/script
format = <label>
exec = python ~/scripts/spotify_status.py -t 15 -f "{artist}: {song}" 
format-foreground = ${colors.foreground-alt}
click-left=i3-msg workspace "10:S"
